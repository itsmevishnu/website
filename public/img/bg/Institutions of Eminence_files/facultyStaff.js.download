function text_chage() {
    $(document).ready(function () {
        $('#FacultyAppraisalConductedOther').on('click', function () {
            var chk = $(this);
            if (chk.is(':checked')) {
                $('.divFacultyAppraisalConductedOther').show();
            } else {
